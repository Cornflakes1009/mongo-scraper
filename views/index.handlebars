<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/">Mongo Scraper</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup"
        aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            <a class="nav-item nav-link active" href="/">Home
            </a>
            <a class="nav-item nav-link active" href="/saved">Saved Articles</a>
            <a href="/scrape" class="btn btn-danger active" role="button">Scrape New York Times</a>
        </div>
    </div>
</nav>
<div class="container-fluid">
    <div class="jumbotron text-center background-image">
        <div class="overlay">
            <div class="caption header-text">
                <h1 class="">Mongo Scraper</h1>
                <h2 class="">NYT Edition</h2>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            {{#if articles}} {{#each articles}}
            <div class="card w-70">
                <div class="card-header text-white bg-secondary">
                    <a href={{link}} target="_blank" class="text-white">
                        <h2>{{title}}</h2>
                    </a>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        {{summary}}
                    </p>
                    <button id="{{_id}}" class="btn btn-info save-btn">Save Article</button>
                </div>
            </div>
            {{/each}} {{else}}
            <div class="card text-white bg-warning w-90 p-1">
                <div class="card-body text-center">
                    No articles scraped.
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</div>
{{!-- modal for saving article --}}
<div class="modal fade" id="save-article-modal" tabindex="-1" role="dialog" aria-labelledby="successMessage" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Notes for Article
                    <span id="article-id"></span>
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card">
                    <ul class="list-group list-group-flush articles-available">
                    </ul>
                </div>
                <br/>
                <div class="form-group">
                    <label for="note-input" class="sr-only">Enter Note Here</label>
                    <textarea class="form-control" id="note-input" rows="3" placeholder="New Note"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="new-note">Save Note</button>
            </div>
        </div>
    </div>
</div>